FROM python:3.6.9-buster

COPY . /app

WORKDIR /app

ARG AZURE_ACCESS_KEY_ID

ARG AZURE_SECRET_ACCESS_KEY

ARG AZURE_DEFAULT_REGION

ARG MONGODB_URL

ARG MLFLOW_TRACKING_URI

ARG MLFLOW_TRACKING_USERNAME

ARG MLFLOW_TRACKING_PASSWORD

ENV AZURE_ACCESS_KEY_ID $AZURE_ACCESS_KEY_ID

ENV AZURE_SECRET_ACCESS_KEY $AZURE_SECRET_ACCESS_KEY

ENV AZURE_DEFAULT_REGION $AZURE_DEFAULT_REGION

ENV MONGODB_URL ${MONGODB_URL}

ENV MLFLOW_TRACKING_URI=${MLFLOW_TRACKING_URI}}

ENV MLFLOW_TRACKING_USERNAME=${MLFLOW_TRACKING_USERNAME}

ENV MLFLOW_TRACKING_PASSWORD=${MLFLOW_TRACKING_PASSWORD}

RUN pip install -r requirements.txt

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8080"]